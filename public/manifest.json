
{
  "manifest_version": 3,
  "name": "Evolve - Productivity Startpage",
  "short_name": "Evolve",
  "version": "1.0.0-beta.1",
  "description": "Beautiful productivity startpage with clock, weather, todo list, notes, pomodoro timer and cloud sync.",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_title": "Evolve",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": [
    "storage"
  ],
  "author": "Ziv Tamary",
  "homepage_url": "https://evolve-app.com"
}
